{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "infrastructure/services/mail/templates/*.hbs",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "infrastructure/services/pdf-generator/templates/*.hbs",
        "watchAssets": true,
        "outDir": "dist/src"
      }
    ],
    "deleteOutDir": true
  }
}